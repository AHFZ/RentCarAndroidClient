<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.LoginTheme" parent="AppTheme">
    </style>

    <style name="AppTheme.CarDetailActivity" parent="AppTheme">
    </style>

    <style name="RoundedColoredButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/background_rounded_colored</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="AppTheme.Title">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TitleProfileDetailActivity</item>
    </style>

    <style name="AppTheme.SubTitle">
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:textAppearance">@style/TextAppearance.SubTitleProfileDetailActivity
        </item>
    </style>

    <!-- Text Appearance -->

    <style name="TextAppearance" />

    <style name="TextAppearance.NormalTextStyle" parent="TextAppearance">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.NormalWhiteTextView" parent="TextAppearance.NormalTextStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.NormalColoredTextStyle" parent="TextAppearance.NormalTextStyle">
        <item name="android:textColor">?colorAccent</item>
    </style>

    <style name="TextAppearance.TitleProfileDetailActivity" parent="TextAppearance">
        <item name="android:textColor">?colorAccent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.SubTitleProfileDetailActivity" parent="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
